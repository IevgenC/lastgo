                	Hots
                </a>
            </div>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="nav navbar-nav">
                    <li class="<%= is_active?('/') %>">
                        <%= link_to "Home", '/#' %>
                    </li>
                    <li class="<%= is_active?('/pages/calculator') %>">
                        <%= link_to "Calculator", '/pages/calculator' %>
                    <li class="<%= is_active?('/pages/about') %>">
                        <%= link_to "About", '/pages/about' %>
